<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bluelotus360.com.mauiBlazor.MauiPages.YesNoPopup"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               Color="#fff"
               HorizontalOptions="Center"
               VerticalOptions="Center"
             >
    <VerticalStackLayout
        Padding="20"
        BackgroundColor="White"
        >
        <Label Text="This is a very important message! Do you agree?" TextColor="#000" x:Name="myText" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"  VerticalOptions="Center"/>
        <HorizontalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center"
            >
            <Button Text="Yes" 
                Clicked="OnYesButtonClicked" />
            <Button Text="No"
                Clicked="OnNoButtonClicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>