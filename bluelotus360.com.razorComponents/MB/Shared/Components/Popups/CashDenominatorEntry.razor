<MudDialog @bind-IsVisible=IsPopUpShown Options="dialogOptions" DisableSidePadding="true">
    <TitleContent>
        <MudToolBar Class="mx-0">
            <MudSpacer />
            <MudIconButton Icon="@Icons.Material.TwoTone.Close" Color="Color.Inherit" OnClick="CloseWindow" />
        </MudToolBar>
        <MudDivider />
    </TitleContent>
    <DialogContent>
        <MudContainer>
           
                    <h6>
                        @CashInOutUIDefeinition.ElementCaption @if (cashtransaction.TransactionNumber.Length > 0)
                        {
                            <span> - <span class="success-text">@cashtransaction.TransactionNumber</span></span>
                        }

                    </h6>

                    <div class=" @(!messages.IsValidForm()?"bl-expansion-panel":"d-none")">
                        <MudExpansionPanels>
                            <MudExpansionPanel Text="@($"Cannot Process,Please Correct Errors")">
                                @foreach (var error in messages.UserMessages)
                                {
                                    <MudText Color="@Color.Error">@error.Message</MudText>
                                }
                            </MudExpansionPanel>
                        </MudExpansionPanels>

                    </div>
                  
                    <CashDenominator @ref="_refDenominator" />
                    <MudGrid>
                        <MudItem xs=12>
                            <hr />
                        </MudItem>
                        <MudItem xs="6">
                            <MudText Typo="Typo.h6"></MudText>
                        </MudItem>
                        <MudItem xs="6">
                            <MudText Align="Align.Right">
                                <MudButton Variant="Variant.Filled" OnClick="CloseWindow" Class="bl-btn-secondary" Color="Color.Default">Cancel</MudButton>
                                <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="bl-btn-primary" OnClick="SaveDenominations">Save</MudButton>
                            </MudText>

                        </MudItem>

                    </MudGrid>

        </MudContainer>

    </DialogContent>
</MudDialog>

<style>
                .bl-pop-up{
                    z-index: 200 !important;
                }
</style>

