
<MudDialog @bind-IsVisible="WindowIsVisible" Options="dialogOptions">

    <TitleContent>
        @PopupTitle
    </TitleContent>
    <DialogContent>
        @if (ModalUIElement != null)
        {
                <div class="px-3">
                    <UIRenderere FromSection="ModalUIElement" DataObject="DataObject" InteractionLogics="InteractionLogics" ObjectHelpers="ObjectHelpers" />
                </div>

        }
        <hr/>

        <div>

            <hr />

            <div style="height:400px;overflow-y:scroll;">
                @if (FoundTransfer != null)
                {
                    <MudTable Items="@FoundTransfer" Hover="true" Breakpoint="Breakpoint.Sm" Loading="false"
                          LoadingProgressColor="Color.Info"
                          CustomFooter="true" Dense="true"
                          FixedHeader="true"
                          FixedFooter="true"
                          Height="400px">
                        <HeaderContent>

                            <MudTh Style="text-align:right">Prefix</MudTh>
                            <MudTh Style="text-align:right">Trn No</MudTh>
                            <MudTh Style="text-align:right">TrnDt</MudTh>
                            <MudTh Style="text-align:right">Action</MudTh>

                        </HeaderContent>

                        <RowTemplate>
                            <MudTd DataLabel="Prefix">@context.Prefix</MudTd>
                            <MudTd DataLabel="Trn No">@context.TrnNo</MudTd>
                            <MudTd Style="text-align:right" DataLabel="TrnDt">@context.TrnDt</MudTd>

                            <MudTd Style="text-align:right" DataLabel="Actions">
                                <div class="" Style="text-align:right">
                                    <MudIconButton Icon="@Icons.Material.Filled.OpenInFull" Variant="Variant.Outlined" Size="Size.Small" Class="ma-2" Color="Color.Error" OnClick="()=>OpenTransfer(context)" />
                                </div>


                            </MudTd>
                        </RowTemplate>



                    </MudTable>
                }


            </div>

        </div>
    </DialogContent>
</MudDialog>