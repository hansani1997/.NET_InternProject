<MudItem xs="12" sm="6" md="@UIElement.Width">

    <MudCard Class="@UIElement.CssClass" Style="height:150px;border-radius:15px;box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);background-color: #F5F7FB" @onclick="@OnCardClick">
        @if (UIElement.Children != null && UIElement.Children.Count > 0)
        {

            @foreach (var uielement in UIElement.Children)
            {
                @if (uielement.ElementType != null && uielement.ElementType.Equals("CardHrader"))
                {
                    <MudCardHeader Class="@uielement.CssClass">

                        <CardHeaderContent>
                            <MudIconButton Class="@uielement.IconCss" Style="color:#0CA678" />
                            <MudText Class="bl-card-value">@card_value</MudText>
                            <MudText Class="bl-card-content">@UIElement.ElementCaption</MudText>

                        </CardHeaderContent>

                        @*<CardHeaderActions>

                                @if (uielement.Children != null && uielement.Children.Count > 0)
                                {
                                @foreach (var child in uielement.Children)
                                {
                                @if (child.ElementType != null && child.ElementType.Equals("IconButton"))
                                {
                                <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
                                }
                                }
                                }
                        </CardHeaderActions>*@

                        <CardHeaderActions>

                            @if (uielement.Children != null && uielement.Children.Count > 0)
                            {
                                @foreach (var child in uielement.Children)
                                {
                                    @if (child.ElementType != null && child.ElementType.Equals("IconButton"))
                                    {
                                        <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
                                    }
                                }
                            }
                        </CardHeaderActions>

                </MudCardHeader>
                }

                @if (uielement.ElementType != null && uielement.ElementType.Equals("CardContent"))
                {
                    <MudCardContent Class="@uielement.CssClass">
                        @*<MudText Style="text-align:center; font-size:50px; font-weight:700">@card_value</MudText>*@
                    </MudCardContent>
                }
                @if (uielement.ElementType != null && uielement.ElementType.Equals("CardAction"))
                {

                    <MudCardActions>
                        @foreach (var child in uielement.Children)
                        {
                            @if (child.ElementType != null && uielement.ElementType.Equals("IconButton"))
                            {
                                <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Default" />
                            }

                        }
                    </MudCardActions>
                }
            }
        }

    </MudCard>


</MudItem>






